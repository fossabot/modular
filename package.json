{
  "name": "modular-core",
  "version": "0.4.1",
  "description": "JavaScript application modular support",
  "main": "./dist/Modular.js",
  "types": "./dist/Modular.d.ts",
  "files": [
    "dist"
  ],
  "author": "Han Feng <han_feng@foxmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/han-feng/modular.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p tsconfig.json --fix",
    "test": "jest",
    "prebuild": "rimraf dist/* && node script/sync-version.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.3.4",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.122",
    "babel-jest": "^24.3.1",
    "chalk": "^2.4.2",
    "jest": "^24.3.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/test/unit/**/*.(test|spec).(js|ts)"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,js,json}"
    ],
    "browser": true,
    "collectCoverage": true
  }
}
